pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'urbancleaning'
        CONTAINER_NAME = 'urban-app'
        PORT = '5000'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/sreenithi-29/Urban_Cleaning_Project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'üß™ Running tests in Docker...'
                // Run tests inside the container
                sh 'docker run --rm myapp pytest tests/'
            }
        }

        stage('Deploy to Production') {
            steps {
                // Stop existing container if running
                sh '''
                    docker ps -q --filter "name=$CONTAINER_NAME" | grep -q . && docker stop $CONTAINER_NAME && docker rm $CONTAINER_NAME || true
                    docker run -d --name $CONTAINER_NAME -p $PORT:5000 $DOCKER_IMAGE
                '''
                echo "üöÄ Deployed to production successfully"
            }
        }
    }

    post {
        failure {
            echo "‚ùå Build or deploy failed!"
        }
    }
}